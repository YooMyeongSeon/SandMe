<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.green.sandme.member.dao.memberDao">

	<!-- 회원가입 -->
	<insert id="RegisterMember" parameterType="com.green.sandme.member.vo.memberVo">
		INSERT INTO member_tbl
		VALUES(member_seq.NEXTVAL, #{memberEmail}, #{memberPwd}, #{memberTel}, #{memberName}, 'N')		
	</insert>

	<!-- 로그인 -->
	<select id="LoginMember" parameterType="String" resultType="com.green.sandme.member.vo.memberVo">
		SELECT * FROM member_tbl
		WHERE memberEmail = #{memberEmail}
	</select>
	
	<!-- 관리자 로그인 -->
	<select id="admin_login" parameterType="com.green.sandme.member.vo.adminVo" resultType="String">
		SELECT adminID FROM ADMIN_TBL
		WHERE adminId = #{adminId} and adminPwd = #{adminPwd}
	</select>
	
	
	<!-- 회원가입 결과 출력 -->
	<select id="RegisterPage" parameterType="String" resultType="com.green.sandme.member.vo.memberVo">
		SELECT * FROM SANDME_MEMBERTBL
		WHERE memberEmail = #{memberEmail}
	</select>
	
	<!-- 마이페이지 이름 출력 -->
	<select id="Mypage" parameterType="String" resultType="com.green.sandme.member.vo.memberVo">
		SELECT * FROM SANDME_MEMBERTBL
		WHERE memberEmail = #{memberEmail}
	</select>
	
	<!-- 회원 정보 수정 폼 출력 -->
	<select id="UserInfo" parameterType="int" resultType="com.green.sandme.member.vo.memberVo">
		SELECT memberNum,  memberName, memberEmail, memberPwd, memberTel FROM SANDME_MEMBERTBL
		WHERE memberNum = #{memberNum}
	</select>	

	<!-- 회원 정보 수정 -->
	<update id="UpdateUser" parameterType="com.green.sandme.member.vo.memberVo" >
		UPDATE SANDME_MEMBERTBL
		SET memberName = #{memberName},
			memberEmail = #{memberEmail}, 
			memberPwd = #{memberPwd},
			memberTel = #{memberTel}
		WHERE memberNum = #{memberNum}
	</update>
	
	<!-- 회원 탈퇴 -->
	<delete id="DeleteUser" parameterType="int">
		DELETE FROM SANDME_MEMBERTBL
		WHERE memberNum = #{memberNum}
	</delete>
	
	<!-- 아이디 중복확인 -->
	<select id="checkUserId" parameterType="String" resultType="int">
		SELECT count(*) FROM SANDME_MEMBERTBL
		WHERE memberEmail = #{memberEmail}
	</select>


	

</mapper>  